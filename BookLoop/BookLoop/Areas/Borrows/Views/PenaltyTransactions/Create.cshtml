@model BookLoop.ViewModels.PenaltyTransactionsViewModel
@{
    ViewData["Title"] = "Create";
}

<h4>設定罰金紀錄</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 真正提交用的 hidden -->
            <input type="hidden" asp-for="MemberID" />
            <input type="hidden" asp-for="RecordID" />
            <input type="hidden" asp-for="UnitAmount" />  @* 讓 JS 寫入目前單價 *@

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label class="form-label text-nowrap text-center">借閱紀錄ID</label>
                <input class="form-control" value="@Model.RecordID" disabled />
            </div>

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label class="form-label text-nowrap text-center">借閱人姓名</label>
                <input class="form-control" value="@Model.MemberName" disabled />
            </div>

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label asp-for="RuleID" class="form-label text-nowrap text-center">規則</label>
                <select asp-for="RuleID" class="form-control" asp-items="ViewBag.RuleID">
                    <option value="">-- 請選擇 --</option>
                </select>
                <span asp-validation-for="RuleID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label asp-for="Quantity" class="form-label text-nowrap text-center">數量</label>
                <input asp-for="Quantity" class="form-control" min="1" max="300" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label class="form-label text-nowrap text-center">單價</label>
                <!-- 顯示用，不提交 -->
                <input class="form-control" id="UnitAmountDisplay" value="@Model.UnitAmount" disabled />
            </div>

            <div class="form-group mb-3 d-flex gap-2 align-items-center">
                <label asp-for="PaidAt" class="form-label text-nowrap text-center">繳清時間</label>
                <input asp-for="PaidAt" class="form-control" type="date" />
                <span asp-validation-for="PaidAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="設定罰金紀錄" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-controller="BorrowRecords" asp-action="Index">回借閱紀錄</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // 以 Dictionary<int, decimal> 或 <int,int> 序列化成 { "1": 50, "2": 80, ... }
        const prices = @Html.Raw(System.Text.Json.JsonSerializer.Serialize((object)ViewBag.UnitAmount));

        const sel = document.getElementById('@Html.IdFor(m => m.RuleID)');
        const unitHidden = document.getElementById('@Html.IdFor(m => m.UnitAmount)');
        const unitDisplay = document.getElementById('UnitAmountDisplay');

        function updatePrice() {
          const id = sel?.value;
          const val = (id && prices && prices[id] != null) ? prices[id] : '';
          // 顯示與提交都同步
          if (unitDisplay) unitDisplay.value = val;
          if (unitHidden) unitHidden.value = val;
        }

        document.addEventListener('DOMContentLoaded', updatePrice);
        sel?.addEventListener('change', updatePrice);
    </script>
}
