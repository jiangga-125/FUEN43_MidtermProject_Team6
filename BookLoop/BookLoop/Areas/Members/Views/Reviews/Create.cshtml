@model BookLoop.Models.ViewModels.CreateReviewVm
@{
    ViewData["Title"] = "建立評論";
}
<h1>@ViewData["Title"]</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<form asp-area="Members" asp-controller="Reviews" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="MemberID" class="form-label"></label>
        <input asp-for="MemberID" class="form-control" />
        <span asp-validation-for="MemberID" class="text-danger"></span>
    </div>

    <!-- 目標類型 -->
    <div class="mb-3">
        <label asp-for="TargetType" class="form-label">評論目標</label>
        <select asp-for="TargetType" class="form-select">
            <option value="">-- 請選擇 --</option>
            <option value="1">書本</option>
            <option value="2">會員</option>
        </select>
        <span asp-validation-for="TargetType" class="text-danger"></span>
    </div>

    <!-- 書名 -->
    <div class="mb-3">
        <label asp-for="TargetBookName" class="form-label">書名</label>
        <input asp-for="TargetBookName" class="form-control" />
        <span asp-validation-for="TargetBookName" class="text-danger"></span>
    </div>

    <!-- 會員暱稱 -->
    <div class="mb-3">
        <label asp-for="TargetMemberNickname" class="form-label">會員暱稱</label>
        <input asp-for="TargetMemberNickname" class="form-control" />
        <span asp-validation-for="TargetMemberNickname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">評分</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">評論</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">送出</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

