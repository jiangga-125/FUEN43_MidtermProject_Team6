<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BookLoop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f8f9fa; /* 淺灰背景 */
        }

        main {
            min-height: 70vh; /* 保持頁面高度，不會太擠 */
        }

        footer {
            margin-top: 50px;
            padding: 20px 0;
            background-color: #212529; /* 深灰底 */
            color: #f8f9fa;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- 導覽列 -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <!-- 左邊 Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">📚 BookLoop</a>

                <!-- 漢堡選單 -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- 導覽列內容 -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- 左邊選單 -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="XXXX" asp-controller="XXXX" asp-action="Index">範例</a>
                        </li> *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="couponsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                🎟️ 優惠券
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="couponsDropdown">
                                <li class="nav-item">
                                    <a href="~/Members/Coupons/Index" class="nav-link">📋 優惠券清單</a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Members/Coupons/Create" class="nav-link">➕ 新增優惠券</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Members" asp-controller="Checkout" asp-action="Index">🧾 優惠券試算/下單</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reviewsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                🗨️ 評論
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="reviewsDropdown">
                                <li class="nav-item">
                                    <a href="~/Members/Reviews/PendingList" class="nav-link">
                                        ⏳ 待審清單
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Members/Reviews/Create" class="nav-link">➕ 建立評論</a>
                                </li>
                            </ul>


                            @* <li class="nav-item">
                            <a class="nav-link" asp-area="Members" asp-controller="Reviews" asp-action="PendingList">🎟️ 評論12</a>
                        </li> *@


                    </ul>

                    <!-- 右邊登入/註冊 -->
                    <div class="d-flex">
                        <a class="btn btn-outline-light me-2" asp-area="Account" asp-controller="Account" asp-action="Login">登入</a>
                        <a class="btn btn-warning" asp-area="Account" asp-controller="Account" asp-action="Register">註冊</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- 主內容 -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- 頁尾 -->
    <footer>
        <div class="container">
            <p class="mb-0">© 2025 BookLoop 專案 | FUEN43 Team 6</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
