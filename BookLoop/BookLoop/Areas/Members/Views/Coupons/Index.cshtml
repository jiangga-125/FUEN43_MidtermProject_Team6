@model IEnumerable<BookLoop.Models.Coupon>
@{
    ViewData["Title"] = "優惠券清單";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>名稱</th>
            <th>代碼</th>
            <th>折扣類型</th>
            <th>折扣值</th>
            <th>開始時間</th>
            <th>結束時間</th>
            <th>狀態</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>@(item.DiscountType == 0 ? "金額折抵" : "百分比折扣")</td>
                <td>@item.DiscountValue</td>
                <td>@item.StartAt</td>
                <td>@item.EndAt</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">可用</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">不可用</span>
                    }
                </td>
                <td>
                    <!-- 編輯 -->
                    <a asp-area="Members"
                       asp-controller="Coupons"
                       asp-action="Edit"
                       asp-route-id="@item.CouponId"
                       class="btn btn-sm btn-primary">
                        編輯
                    </a>


                    <!-- 啟用/停用 -->
                    <form asp-area="Members" asp-controller="Coupons" asp-action="ToggleActive" asp-route-id="@item.CouponId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-warning" : "btn-success")">
                            @(item.IsActive ? "停用" : "啟用")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Members" asp-controller="Coupons" asp-action="Create" class="btn btn-success">新增優惠券</a>
