@model IEnumerable<BookLoop.Models.Shipment>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>物流公司</th>
            <th>追蹤號碼</th>
            <th>配送地址</th>
            <th>出貨日期</th>
            <th>送達日期</th>
            <th>狀態</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Provider</td>
                <td>@s.TrackingNumber</td>
                <td>@s.Address?.Address</td>
                <td>@s.ShippedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@s.DeliveredDate?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(s.Status == 0 ? "已出貨" : s.Status == 1 ? "已送達" : "已退回")</td>
            </tr>
        }
    </tbody>
</table>