@model BookLoop.Models.Order

@{
    ViewData["Title"] = "Create";
}
@{
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Value = "0", Text = "待付款" },
        new SelectListItem { Value = "1", Text = "已下訂" },
        new SelectListItem { Value = "2", Text = "已出貨" },
        new SelectListItem { Value = "3", Text = "完成訂單" },
        new SelectListItem { Value = "4", Text = "已取消" }
