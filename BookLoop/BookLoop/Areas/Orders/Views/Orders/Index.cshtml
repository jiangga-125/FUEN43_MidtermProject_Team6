                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    ⚙️ 操作
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.OrderID">✏️ 修改</a></li>
                                    <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.OrderID">ℹ️ 詳細資訊</a></li>
                                    <li><a class="dropdown-item" asp-action="OrderDetails" asp-route-id="@item.OrderID">📑 訂單明細</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.OrderID">🗑️ 刪除</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* 分頁 *@
<div class="d-flex justify-content-between align-items-center mt-3">
    @if (ViewBag.TotalCount > 0)
    {
        <div>
            顯示第 @(((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1)
            到 @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) 筆，
            共 @ViewBag.TotalCount 筆
        </div>
    }
    else
    {
        <div>沒有資料</div>
    }

    <nav>
        <ul class="pagination mb-0">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]"
                   asp-route-searchCustomerName="@ViewContext.HttpContext.Request.Query["searchCustomerName"]"
                   asp-route-searchCustomerID="@ViewContext.HttpContext.Request.Query["searchCustomerID"]"
                   asp-route-searchStartDate="@ViewContext.HttpContext.Request.Query["searchStartDate"]"
                   asp-route-searchEndDate="@ViewContext.HttpContext.Request.Query["searchEndDate"]"
                   asp-route-searchBookName="@ViewContext.HttpContext.Request.Query["searchBookName"]">上一頁</a>
            </li>

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]"
                       asp-route-searchCustomerName="@ViewContext.HttpContext.Request.Query["searchCustomerName"]"
                       asp-route-searchCustomerID="@ViewContext.HttpContext.Request.Query["searchCustomerID"]"
                       asp-route-searchStartDate="@ViewContext.HttpContext.Request.Query["searchStartDate"]"
                       asp-route-searchEndDate="@ViewContext.HttpContext.Request.Query["searchEndDate"]"
                       asp-route-searchBookName="@ViewContext.HttpContext.Request.Query["searchBookName"]">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]"
                   asp-route-searchCustomerName="@ViewContext.HttpContext.Request.Query["searchCustomerName"]"
                   asp-route-searchCustomerID="@ViewContext.HttpContext.Request.Query["searchCustomerID"]"
                   asp-route-searchStartDate="@ViewContext.HttpContext.Request.Query["searchStartDate"]"
                   asp-route-searchEndDate="@ViewContext.HttpContext.Request.Query["searchEndDate"]"
                   asp-route-searchBookName="@ViewContext.HttpContext.Request.Query["searchBookName"]">下一頁</a>
            </li>
        </ul>
    </nav>
</div>

@* 物流modal *@
<div class="modal fade" id="shipmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">物流資訊</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="shipmentContent">
                載入中...
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#shipmentModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);  // 取得點擊的按鈕
                var orderID = button.data('orderid'); // 從按鈕抓 orderID
                var modal = $(this);

                // 這裡就是放 URL
                var url = '/Orders/Shipments/DetailsByOrder?orderID=' + orderID;

                // 載入 PartialView
                modal.find('#shipmentContent').load(url);
            });

            // 點行列跳轉訂單明細
            $(document).on("click", ".order-row", function (e) {
                if (!$(e.target).closest("a, button").length) {
                    var orderID = $(this).data("id");
                    window.location = '/Orders/OrderDetails/' + orderID;
                }
            });
        });
    </script>
}