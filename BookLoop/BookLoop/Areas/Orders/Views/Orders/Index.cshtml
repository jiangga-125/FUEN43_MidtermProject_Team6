@model IEnumerable<BookLoop.Models.Order>

@{
    ViewData["Title"] = "Index";
}
@section Styles {
    <style>



        th.head-width, td.head-width {
            width: 140px;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        /* 訂單滑鼠移上去變色*/
        .table tbody tr:hover {
            background-color: #f0f8ff; /* 淡藍色，可換顏色 */
            cursor: pointer; /* 滑鼠變成手型，更直覺 */
            transition: background-color 0.3s ease; /* 平滑過渡 */
        }

        /* 新增按鈕CSS*/
        .btn-new {
            width: 200px; /* 寬度 */
            border: 2px solid #28a745; /* 跟 btn-success 顏色一致 */
            background-color: #eaf9ee; /* 框內淺綠色 */
            color: #28a745; /* 文字顏色 */
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-new:hover {
                background-color: #28a745; /* 新增按鈕滑鼠移上去變深綠 */
                color: white;
            }




        .btn-action {
            width: 120px;
            font-weight: 600;
            border-radius: 12px; /* 圓角 */
            transition: all 0.3s ease;
        }

            .btn-action:hover {
                transform: translateY(-2px); /* 輕微浮起 */
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            }

    </style>
}


<div class="text-center">
    <h1 class="border-2">訂單</h1>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <div class="mb-3 text-start">
        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#advancedSearch" aria-expanded="false" aria-controls="advancedSearch">
            進階搜尋
        </button>
    </div>

    <div class="collapse @(
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchOrderID"]) ||
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchCustomerName"]) ||
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchCustomerID"]) ||
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchStartDate"]) ||
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchEndDate"]) ||
          !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchBookName"])
          ? "show" : "")"
          id="advancedSearch">
        <div class="card card-body mb-3">
            <form asp-action="Index" method="get" class="row g-2">

                <div class="col-md-2">
                    <label for="searchStartDate" class="form-label">訂單編號</label>
                    <input type="number" name="searchOrderID" class="form-control" placeholder="OrderID" value="@ViewContext.HttpContext.Request.Query["searchOrderID"]">
                </div>

                <div class="col-md-2">
                    <label for="searchStartDate" class="form-label">客戶姓名</label>
                    <input type="text" name="searchCustomerName" class="form-control" placeholder="姓名" value="@ViewContext.HttpContext.Request.Query["searchCustomerName"]">
                </div>

                <div class="col-md-2">
                    <label for="searchStartDate" class="form-label">客戶ID</label>
                    <input type="number" name="searchCustomerID" class="form-control" placeholder="客戶ID" value="@ViewContext.HttpContext.Request.Query["searchCustomerID"]">
                </div>

                <div class="col-md-2">
                    <label for="searchStartDate" class="form-label">訂單日期(開始日期)</label>
                    <input type="date" id="searchStartDate" name="searchStartDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["searchStartDate"]">
                </div>

                <div class="col-md-2">
                    <label for="searchEndDate" class="form-label">訂單日期(結束日期)</label>
                    <input type="date" id="searchEndDate" name="searchEndDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["searchEndDate"]">
                </div>
                <div class="col-md-2">
                    <label for="searchStartDate" class="form-label">書籍</label>
                    <input type="text" name="searchBookName" class="form-control" placeholder="書籍名稱" value="@ViewContext.HttpContext.Request.Query["searchBookName"]">
                </div>

                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-primary w-100">搜尋</button>
                </div>
            </form>
        </div>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-new">新增</a>
    </p>
    <div class="d-flex justify-content-center">
        <table class="table" style="table-layout: fixed; width:100%;">
            <thead>
                <tr>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.OrderID)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="head-width">
                        會員ID
                    </th>
                    @*  <th class="head-width">
                @Html.DisplayNameFor(model => model.DiscountAmount)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.DiscountCode)
                    </th>

                    @*  <th class="head-width">
                @Html.DisplayNameFor(model => model.MemberCouponID)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponTypeSnap)
                    </th>
                    @* <th class="head-width">
                @Html.DisplayNameFor(model => model.CouponValueSnap)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponNameSnap)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponDiscountAmount)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>

                    <th class="head-width">
