                    <tr class="order-row" data-id="@item.OrderID">

                        <td>
                            @Html.DisplayFor(modelItem => item.OrderID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @{
                                string statusText = item.Status switch
                                {
                                    0 => "待付款",
                                    1 => "已下訂",
                                    2 => "已出貨",
                                    3 => "完成訂單",
                                    4 => "已取消",
                                    _ => "未知狀態"
