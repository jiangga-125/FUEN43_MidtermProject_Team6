@model IEnumerable<BookLoop.Models.Order>

@{
    ViewData["Title"] = "Index";
}
@section Styles {
    <style>



        th.head-width, td.head-width {
            width: 140px;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        /* 訂單滑鼠移上去變色*/
        .table tbody tr:hover {
            background-color: #f0f8ff; /* 淡藍色，可換顏色 */
            cursor: pointer; /* 滑鼠變成手型，更直覺 */
            transition: background-color 0.3s ease; /* 平滑過渡 */
        }

        /* 新增按鈕CSS*/
        .btn-new {
            width: 200px; /* 寬度 */
            border: 2px solid #28a745; /* 跟 btn-success 顏色一致 */
            background-color: #eaf9ee; /* 框內淺綠色 */
            color: #28a745; /* 文字顏色 */
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-new:hover {
                background-color: #28a745; /* 新增按鈕滑鼠移上去變深綠 */
                color: white;
            }




        .btn-action {
            width: 120px;
            font-weight: 600;
            border-radius: 12px; /* 圓角 */
            transition: all 0.3s ease;
        }

            .btn-action:hover {
                transform: translateY(-2px); /* 輕微浮起 */
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            }

    </style>
}


<div class="text-center">
    <h1 class="border-2">訂單</h1>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="d-flex justify-content-between mb-3">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="number" name="searchOrderID" class="form-control me-2"
                   placeholder="搜尋 OrderID" value="@ViewContext.HttpContext.Request.Query["searchOrderID"]">
            <button type="submit" class="btn btn-primary" style="width:100px;">搜尋</button>
        </form>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-new">新增</a>
    </p>
    <div class="d-flex justify-content-center">
        <table class="table" style="table-layout: fixed; width:100%;">
            <thead>
                <tr>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.OrderID)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="head-width">
                        會員ID
                    </th>
                    @*  <th class="head-width">
                @Html.DisplayNameFor(model => model.DiscountAmount)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.DiscountCode)
                    </th>

                    @*  <th class="head-width">
                @Html.DisplayNameFor(model => model.MemberCouponID)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponTypeSnap)
                    </th>
                    @* <th class="head-width">
                @Html.DisplayNameFor(model => model.CouponValueSnap)
            </th> *@
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponNameSnap)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.CouponDiscountAmount)
                    </th>
                    <th class="head-width">
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>

                    <th class="head-width">
                        物流資訊
                    </th>
                    <th class="head-width">
                        租借書籍資訊
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="order-row" data-id="@item.OrderID">

                        <td>
                            @Html.DisplayFor(modelItem => item.OrderID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @{
                                string statusText = item.Status switch
                                {
                                    0 => "待付款",
                                    1 => "已下訂",
                                    2 => "已出貨",
                                    3 => "完成訂單",
                                    4 => "已取消",
                                    _ => "未知狀態"
                                };
                            }
                            @statusText
                        </td>
                        <td>
                            @(item.Customer?.MemberID?.ToString() ?? "無會員")
                        </td>
                        @* <td>
                @Html.DisplayFor(modelItem => item.DiscountAmount)
            </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => item.DiscountCode)
                        </td>

                        @* <td>
                @Html.DisplayFor(modelItem => item.MemberCouponID)
            </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => item.CouponTypeSnap)
                        </td>
                        @* <td>
                @Html.DisplayFor(modelItem => item.CouponValueSnap)
            </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => item.CouponNameSnap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CouponDiscountAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.CustomerID)
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#shipmentModal" data-orderid="@item.OrderID">
                                查看物流
                            </button>
                        </td>
                        <td>
                            <a asp-controller="Rentals" asp-action="ByID" asp-route-orderID="@item.OrderID" class="btn btn-secondary">
                                查看租借書籍
                            </a>
                        </td>

                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    ⚙️ 操作
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.OrderID">✏️ 修改</a></li>
                                    <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.OrderID">ℹ️ 詳細資訊</a></li>
                                    <li><a class="dropdown-item" asp-action="OrderDetails" asp-route-id="@item.OrderID">📑 訂單明細</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.OrderID">🗑️ 刪除</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* 分頁 *@
<div class="d-flex justify-content-between align-items-center mt-3">
    <div>
        顯示第 @(((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1)
        到 @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) 筆，
        共 @ViewBag.TotalCount 筆
    </div>

    <nav>
        <ul class="pagination mb-0">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]">上一頁</a>
            </li>

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-searchOrderID="@ViewContext.HttpContext.Request.Query["searchOrderID"]">下一頁</a>
            </li>
        </ul>
    </nav>
</div>

@* 物流modal *@
<div class="modal fade" id="shipmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">物流資訊</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="shipmentContent">
                載入中...
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#shipmentModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);  // 取得點擊的按鈕
                var orderID = button.data('orderid'); // 從按鈕抓 orderID
                var modal = $(this);

                // 這裡就是放 URL
                var url = '/Orders/Shipments/DetailsByOrder?orderID=' + orderID;

                // 載入 PartialView
                modal.find('#shipmentContent').load(url);
            });

            // 點行列跳轉訂單明細
            $(document).on("click", ".order-row", function (e) {
                if (!$(e.target).closest("a, button").length) {
                    var orderID = $(this).data("id");
                    window.location = '/Orders/OrderDetails/' + orderID;
                }
            });
        });
    </script>
}