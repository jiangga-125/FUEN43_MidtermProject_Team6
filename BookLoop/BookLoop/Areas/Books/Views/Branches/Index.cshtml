@model IEnumerable<BookLoop.Models.Branch>
@{
    ViewData["Title"] = "據點管理";
    var q = ViewBag.q as string;
    bool showInactive = ViewBag.showInactive ?? false;
}
<h3>@ViewData["Title"]</h3>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}
@if (TempData["err"] != null)
{
    <div class="alert alert-warning">@TempData["err"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input name="q" class="form-control" placeholder="搜尋據點名稱" value="@q" />
    </div>
    <div class="col-auto form-check align-self-center">
        <input type="checkbox" class="form-check-input" id="chkInactive" name="showInactive" value="true" @(showInactive ? "checked" : "") />
        <label for="chkInactive" class="form-check-label">顯示停用</label>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary">查詢</button>
    </div>
    <div class="col-auto">
        <a asp-area="Books" asp-controller="Branches" asp-action="Create" class="btn btn-primary">新增據點</a>
    </div>
    <div class="mt-3">
        <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">返回上一頁</a>
    </div>

</form>

<table class="table table-sm align-middle">
    <thead>
        <tr>
            <th style="width:80px;">ID</th>
            <th>據點名稱</th>
            <th style="width:120px;">狀態</th>
            <th style="width:220px;">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BranchID</td>
                <td>@b.BranchName</td>
                <td>
                    @if (b.IsActive)
                    {
                        <span class="badge bg-success">啟用</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">停用</span>
                    }
                </td>
                <td>
                    <a asp-area="Books" asp-controller="Branches" asp-action="Edit" asp-route-id="@b.BranchID"
                       class="btn btn-sm btn-warning">編輯</a>

                    <form asp-area="Books" asp-controller="Branches" asp-action="Toggle" asp-route-id="@b.BranchID"
                          method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-secondary" type="submit">
                            @(b.IsActive ? "停用" : "啟用")
                        </button>
                    </form>

                    <form asp-area="Books" asp-controller="Branches" asp-action="Delete" asp-route-id="@b.BranchID"
                          method="post" class="d-inline" onsubmit="return confirm('確定要刪除嗎？');">
                        <button class="btn btn-sm btn-outline-danger" type="submit">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
