@model BookLoop.Models.Publisher

@{
    ViewData["Title"] = "刪除出版社";
}

<h1>刪除出版社</h1>

<!-- 提示確認訊息 -->
<h3>確定要刪除這筆資料嗎？</h3>

<!-- 顯示要刪除的資料 -->
<div>
    <h4>@Model.PublisherName</h4>
    <dl class="row">
        <dt class="col-sm-2">建立時間</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
        <dt class="col-sm-2">最後更新</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>
</div>

<!-- 表單送到 POST: DeleteConfirmed -->
<form asp-action="Delete">
    <input type="hidden" asp-for="PublisherID" />
    <input type="submit" value="刪除" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
