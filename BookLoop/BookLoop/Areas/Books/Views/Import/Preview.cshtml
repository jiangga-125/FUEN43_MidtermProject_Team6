@using BookLoop.Services.Import
@model IEnumerable<ImportCategoryDto>

<h1>匯入預覽</h1>
<p>以下為前 10 筆資料，確認後可匯入正式資料庫：</p>

<form asp-action="Commit" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>分類名稱</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        <input type="hidden" name="categories[@i].CategoryName" value="@Model.ElementAt(i).CategoryName" />
                        @Model.ElementAt(i).CategoryName
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <input type="submit" value="確認匯入" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
