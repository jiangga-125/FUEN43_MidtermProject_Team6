@model IEnumerable<BookLoop.Models.Category>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>分類名稱</th>
            <th>Slug</th>
            <th>建立時間</th>
            <th>最後更新</th>
            <th class="text-end">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Slug</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-sm btn-warning me-1">編輯</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-sm btn-info me-1">詳細</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
