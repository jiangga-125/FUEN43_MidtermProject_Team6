@model BorrowSystem.ViewModels.ListingsCrudForCreateEdit

@{
    ViewData["Title"] = "新增";
}

<h1>新增二手書</h1>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" method="post" id="createForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 d-flex gap-2 align-items-center">
                <label asp-for="Title" class="form-label text-nowrap text-center"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger text-nowrap text-center"></span>
            </div>

            <div class="mb-3 d-flex gap-2 align-items-center">
                <label asp-for="PublisherID" class="form-label text-nowrap text-center"></label>
                <select asp-for="PublisherID" class="form-select" asp-items="Model.PublisherOptions">
                    <option value="">-- 請選擇出版社 --</option>
                </select>
                <span asp-validation-for="PublisherID" class="text-danger text-nowrap text-center"></span>
            </div>

            <div class="mb-3 d-flex gap-2 align-items-center">
                <label asp-for="CategoryID" class="form-label text-nowrap text-center"></label>
                <select asp-for="CategoryID" class="form-select" asp-items="Model.CategoryOptions">
                    <option value="">-- 請選擇種類 --</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger text-nowrap text-center"></span>
            </div>

            <div class="mb-3 d-flex gap-2 align-items-center">
                <label asp-for="ISBN" class="form-label text-nowrap text-center"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger text-nowrap text-center"></span>
            </div>

            <div class="mb-3 d-flex gap-2 align-items-center">
                <label asp-for="Condition" class="form-label text-nowrap text-center"></label>
                <input asp-for="Condition" class="form-control" />
                <span asp-validation-for="Condition" class="text-danger text-nowrap text-center"></span>
            </div>

            <table class="table align-middle" id="authorsTable">
                <thead>
                    <tr>
                        <th style="width:60%">作者名稱</th>
                        <th class="text-center" style="width:20%">主作者</th>
                        <th class="text-center" style="width:20%">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Authors.Count; i++)
                    {
                        var radioId = $"PrimaryIndex_{i}";
                        <tr>
                            <td>
                                <input type="hidden" asp-for="Authors[@i].ListingAuthorID" />
                                <input asp-for="Authors[@i].AuthorName" class="form-control" />
                                <span asp-validation-for="Authors[@i].AuthorName" class="text-danger"></span>
                            </td>
                            <td class="text-center">
                                <input type="radio"
                                       id="@radioId"
                                       class="form-check-input"
                                       asp-for="PrimaryIndex"
                                       value="@i" />
                                <label class="form-check-label ms-1" for="@radioId">主作者</label>
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-outline-primary btn-sm add-btn">新增</button>
                                <button type="button" class="btn btn-outline-danger btn-sm delete-btn">刪除</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-danger">
                <span asp-validation-for="PrimaryIndex"></span>
            </div>

            <div class="mt-3">
                <button type="submit" value="Create" class="btn btn-primary">建立</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">回總覽</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/authors.js" asp-append-version="true"></script>       
}
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="errorModalLabel">錯誤</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
            </div>
            <div class="modal-body">
                @* 你可以用 ValidationSummary 列出模型錯誤 *@
                @Html.ValidationSummary(excludePropertyErrors: false, message: null, htmlAttributes: new { @class = "text-danger mb-0" })
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>
