@model IEnumerable<BorrowSystem.Controllers.UsedInventoryRowVm>
@{
    var listing = ViewBag.Listing as BookLoop.Models.Listing;
    ViewData["Title"] = "二手書庫存維護";
}

<h2 class="mb-4">二手書庫存維護</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="listingID" value="@listing?.ListingID" />
    <table class="table table-bordered align-middle text-center">
        <thead class="table-light">
            <tr>
                <th>據點名稱</th>
                <th>可用數量(OnHand)</th>
                <th>已預約(Reserved)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" name="BranchID" value="@row.BranchID" />
                        @row.BranchName
                    </td>
                    <td>
                        <input type="number" class="form-control text-center" name="OnHand" value="@row.OnHand" min="0" />
                    </td>
                    <td>@row.Reserved</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">儲存變更</button>
    <a asp-area="Borrow" asp-controller="Listings" asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
