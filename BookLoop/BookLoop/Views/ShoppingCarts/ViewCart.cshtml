@model BookLoop.Models.ShoppingCart

@{
    ViewData["Title"] = "View Cart";
}

<h1>購物車內容</h1>

<div class="card mb-3 p-3">
    <p><strong>Cart ID:</strong> @Model.CartID</p>
    <p><strong>會員:</strong> @(Model.Member != null ? $"{Model.Member.Username} (ID: {Model.Member.MemberID})" : "未指定")</p>
    <p><strong>建立時間:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>最後更新:</strong> @Model.UpdatedDate.ToString("yyyy-MM-dd HH:mm")</p>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>書名</th>
            <th>數量</th>
            <th>單價</th>
            <th>小計</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Book?.Title</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.UnitPrice* item.Quantity)</td>
                <td>
                    <form asp-action="RemoveItem" method="post" class="d-inline">
                        <input type="hidden" name="itemId" value="@item.ItemID" />
                        <button type="submit" class="btn btn-sm btn-danger">移除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary">
            <th colspan="3">總計</th>
            <th>@Model.Items.Sum(i => i.UnitPrice * i.Quantity).ToString("C")</th>
            <th></th>
        </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">回購物車列表</a>
</div>