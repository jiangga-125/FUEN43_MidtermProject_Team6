@{
    ViewData["Title"] = "首頁";
}

<div class="hero-section d-flex align-items-center justify-content-center text-center">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3">📚 歡迎來到 BookLoop</h1>
        <p class="lead text-light mb-4">
            管理書籍、訂單、二手書共享、報表分析、會員帳號與優惠券
            一站式後台系統
        </p>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <!-- 書籍管理 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">📘</div>
                    <h4 class="fw-bold">書籍管理</h4>
                    <p class="text-muted">管理新書資訊、分類與出版社。</p>
                    <a asp-area="Books" asp-controller="Books" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>

        <!-- 訂單管理 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">🛒</div>
                    <h4 class="fw-bold">訂單管理</h4>
                    <p class="text-muted">檢視與管理用戶的訂單資料。</p>
                    <a asp-area="Orders" asp-controller="Orders" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>

        <!-- 二手書籍 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">📚</div>
                    <h4 class="fw-bold">二手書籍</h4>
                    <p class="text-muted">共享、借閱與二手書交易。</p>
                    <a asp-area="Borrow" asp-controller="Listings" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>

        <!-- 報表分析 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">📊</div>
                    <h4 class="fw-bold">報表分析</h4>
                    <p class="text-muted">產生與匯出營運統計報表。</p>
                    <a asp-area="ReportMail" asp-controller="Reports" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>

        <!-- 帳號管理 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">👤</div>
                    <h4 class="fw-bold">帳號管理</h4>
                    <p class="text-muted">會員帳號與權限控管。</p>
                    <a asp-area="Account" asp-controller="Home" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>

        <!-- 優惠券 -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-lg h-100 text-center border-0 feature-card">
                <div class="card-body">
                    <div class="icon mb-3">🎟️</div>
                    <h4 class="fw-bold">優惠券</h4>
                    <p class="text-muted">建立與管理優惠活動。</p>
                    <a asp-area="Members" asp-controller="Checkout" asp-action="Index" class="btn btn-dark">進入</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Hero 區塊 */
        .hero-section {
            background: url('/images/Background.png') no-repeat center center;
            background-size: cover;
            min-height: 60vh;
            position: relative;
            color: #fff;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0, 0, 0, 0.55);
            }

            .hero-section .container {
                position: relative;
                z-index: 2;
            }

        /* 功能卡片 */
        .feature-card .icon {
            font-size: 3rem;
        }

        .feature-card {
            transition: transform 0.2s, box-shadow 0.2s;
            border-radius: 12px;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            }
    </style>
}
