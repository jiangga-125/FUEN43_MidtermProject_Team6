@model IEnumerable<BookLoop.Ordersys.Models.Rental>
@{
    ViewData["Title"] = "租借紀錄";
    var orderID = ViewData["OrderID"];
}

<h2>訂單 @orderID 的租借紀錄</h2>

<p>
    <a asp-action="CreateByID" asp-route-orderID="@orderID" class="btn btn-primary">新增租借紀錄</a>
    <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">回訂單列表</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>租借品項</th>
            <th>開始日期</th>
            <th>結束日期</th>
            <th>實際歸還</th>
            <th>狀態</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.RentalStart.ToString("yyyy/MM/dd")</td>
                <td>@item.RentalEnd.ToString("yyyy/MM/dd")</td>
                <td>@(item.ReturnedDate?.ToString("yyyy/MM/dd") ?? "-")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="EditByID" asp-route-id="@item.RentalID" class="btn btn-sm btn-warning">修改</a>

                    <!-- 刪除直接 POST -->
                    <form asp-action="DeleteByID" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.RentalID" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除嗎？');">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>