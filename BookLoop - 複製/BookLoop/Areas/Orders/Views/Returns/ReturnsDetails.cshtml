@model IEnumerable<BookLoop.Ordersys.Models.OrderDetail>

@{
    ViewData["Title"] = "退貨訂單明細";
}

<h2>退貨訂單明細</h2>

@if (!Model.Any())
{
    <p>此退貨單目前沒有任何商品。</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th>@Html.DisplayNameFor(model => model.ProductDiscountAmount)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
                <tr>
                    <td>@detail.ProductName</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice</td>
                    <td>@detail.ProductDiscountAmount</td>
                    <td>@detail.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-controller="Returns" asp-action="Index" class="btn btn-secondary">返回退貨列表</a>
</p>